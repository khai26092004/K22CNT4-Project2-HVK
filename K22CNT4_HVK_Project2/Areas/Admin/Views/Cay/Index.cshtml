@model IEnumerable<K22CNT4_HVK_TTCD1.Models.Cay>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">Index</h2>

    <div class="mb-3">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </div>

    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Tencay)</th>
                <th>@Html.DisplayNameFor(model => model.Soluong)</th>
                <th>@Html.DisplayNameFor(model => model.Dongia)</th>
                <th>@Html.DisplayNameFor(model => model.Hinhanh)</th>
                <th>@Html.DisplayNameFor(model => model.Trangthai)</th>
                <th>@Html.DisplayNameFor(model => model.DanhMucCay.Tendanhmuc)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Tencay)</td>
                    <td>@Html.DisplayFor(modelItem => item.Soluong)</td>
                    <td>@Html.DisplayFor(modelItem => item.Dongia)</td>
                    <td>
                        <img src="@Url.Content(item.Hinhanh)" alt="Image" class="img-thumbnail" style="max-width: 100px;" />
                    </td>
                    <td>
                        @if (item.Trangthai)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.DanhMucCay.Tendanhmuc)</td>
                    <td>
                        <div class="btn-group" role="group">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
